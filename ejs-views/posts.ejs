<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/header.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>
    <h1>Posts:</h1>
    <ul>
        <% posts.forEach(({id, title, author, date, text}) => { %>
            <li>
                <article>
                    <h2>
                        <a href="/posts/<%= id %>"><%= title %></a>
                    </h2>
                    <p><%= text %></p>
                        <div class="info">
                            <span><%= date %></span>
                            <span><%= author %></span>
                        </div>
                </article>
            </li>
        <% }); %>
    </ul>
</body>

</html>